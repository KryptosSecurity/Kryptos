/* Reset */
*
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box

html, body, div, ul, li, h1
    padding 0
    margin 0
    
ul, li
    list-style none
    
label, input, textarea, button
    display block
    
label, input, textarea, button
    font-family Arial, "Helvetica Neue", Helvetica, sans-serif
    
/* Main/Home*/    
body
    background #333
    
header
    display block
    background #1a6a8a
    width 100%
    height 48px
    text-align center
    position relative
    
    h1
        font-family Arial, "Helvetica Neue", Helvetica, sans-serif
        font-size 18px
        font-weight 400
        color #fff
        line-height 48px
        text-transform uppercase
        
label
    font-size 0

.main
    width 100%
    margin 0 auto
    padding 0
    position absolute
    top 48px
    bottom 0
    
    label
        height 100%
        display block
    
    textarea
        width 100%
        height 100%
        display block
        border 8px solid #16546D
        padding 10px
        outline transparent
        font-size 15px

.security-check.active
    display block

.security-check
    display none
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    
    background #1a6a8a
    background -moz-linear-gradient(top,  #1a6a8a 0%, #1a6a8a 80%, #002C3C 100%)
    background -webkit-linear-gradient(top,  #1a6a8a 0%,#1a6a8a 80%, #002C3C 100%)
    background linear-gradient(to bottom,  #1a6a8a 0%,#1a6a8a 80%, #002C3C 100%)

    z-index 2
    
    .box-password
        position absolute
        top calc(50vh - 80px)
        width 90%
        margin-left 5%
        
    .title
        font-family Arial, "Helvetica Neue", Helvetica, sans-serif
        font-size 30px
        font-weight 400
        color #fff
        line-height 50px
        text-transform uppercase
        text-align center
    
    .label-pw
        width 100%
        
        .pw
            font-size 18px
            width 100%
            height 45px
            line-height 45px
            text-align center
            border 0
            
            &:focus
                outline: 2px solid #000
    
    .button-login
        width 100%
        border 0
        margin-top 10px
        
        font-size 17px
        line-height 40px
        color #fff
        text-transform uppercase
        font-weight 700
        background: #185973
        border 1px solid #174152
        
        &:focus
            outline: 2px solid #000